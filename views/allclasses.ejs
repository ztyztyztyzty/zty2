<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>产品列表</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="style/adminStyle.css" rel="stylesheet" type="text/css" />
</head>
<body>
<script src="http://libs.baidu.com/jquery/1.11.1/jquery.min.js"></script>
<div class="wrap">
    <div class="page-title">
        <span class="modular fl"><i></i><em>课程列表</em></span>
    </div>
    <div class="operate">
    </div>
    <table class="list-style Interlaced">
        <tr>
            <th>课程名称</th>
            <th>教师</th>
            <th>上课地点</th>
            <th>上课时间</th>
            <th>学分</th>
            <th>修改</th>
        </tr>
        <%  var i=0;for( i=0; i<arr.length; i++){ %>
        <tr>
            <td>
                <span><%= arr[i].name %> </span>
            </td>
            <td class="td-name">
                <span><%= arr[i].teacher %></span>
            </td>
            <td class="center">
                <span><%= arr[i].place %></span>
            </td>
            <td class="center">
                <span><%= arr[i].time %></span>
            </td>
            <td class="center">
                <span><%= arr[i].credit %></span>
            </td>
            <td>
            <button title="选课" id="edit" onclick="$.post('/editclass',{
                'id':'<%=arr[i].id%>',
                    'name':'<%=arr[i].name%>',
                    'place':'<%=arr[i].place%>',
                    'time':'<%=arr[i].time%>',
                    'credit':'<%=arr[i].credit%>',
                    'location':'<%=arr[i].location%>',
                    'acd':'<%=arr[i].acd%>',
                    'grade':'<%=arr[i].grade%>',
                    'credit':'<%=arr[i].credit%>',
                    'teacher':'<%=arr[i].teacher%>'
            },function(info) {
                    location.href='/doedit';
                    })
                ">
                <img src="images/icon_edit.gif"/></button>
            </td>
        </tr>
        <% } %>
        <tr>
            <td >课程总数： <span id="s"><%= arr.length %></span></td>
        </tr>
    </table>
    <!-- BatchOperation -->
    <!-- turn page -->
    <div class="turnPage center fr">
        <a>第一页</a>
        <a>1</a>
        <a>最后一页</a>
    </div>
    <script>
        var status=document.getElementById('s').innerHTML;
        if(status==0){
            alert('权限错误,无权查看');
            location.href="main.html"
        }
    </script>
</div>
</div>
</body>
</html>