<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>产品列表</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="style/adminStyle.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="wrap">
    <div class="page-title">
        <span class="modular fl"><i></i><em>课程列表</em></span>
    </div>
    <div class="operate">
    </div>
    <table class="list-style Interlaced">
        <tr>
            <th>学生名称</th>
            <th>课程名称</th>
            <th>教师</th>
            <th>上课地点</th>
            <th>上课时间</th>
            <th>学分</th>
        </tr>
        <% var credit=parseInt('0')%>
        <%  var i=0;for( i=0; i<arr.length; i++){ %>
        <tr>
            <td>
     <span >
      <%= arr[i].name %>
     </span>
            </td>
            <td>
     <span >
      <%= arr[i].coursename %>
     </span>
            </td>
            <td class="td-name">
                <span class="ellipsis td-name block"> <%= arr[i].teacher %></span>
            </td>
            <td class="center">
     <span>
      <%= arr[i].place %>
     </span>
            </td>
            <td class="center">
     <span>
      <%= arr[i].time %>
     </span>
            </td>
            <td class="center">
    <span>
        <%= arr[i].credit %>
        <% credit+= parseFloat(arr[i].credit)%>
    </span>
            </td>
        </tr>
        <% } %>
        <tr >
            <td > <span>课程总数：<%= arr.length %></span></td>
            <td > <span>总学分：<%= credit %></span></td>
        </tr>
    </table>
    <!-- BatchOperation -->
    <!-- turn page -->
    <div class="turnPage center fr">
        <a>第一页</a>
        <a>1</a>
        <a>最后一页</a>
    </div>
</div>
</div>
</body>
</html>