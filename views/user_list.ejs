<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>会员列表</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="style/adminStyle.css" rel="stylesheet" type="text/css" />
<script src="js/jquery.js"></script>
<script src="js/public.js"></script>

</head>
<body>
 <div class="wrap">
  <div class="page-title">
    <span class="modular fl"><i class="user"></i><em>学生列表</em></span>
  </div>
  <table class="list-style Interlaced">

   <tr>
    <th>学生名称</th>
    <th>等级</th>
    <th>查看选课情况</th>
   </tr>
      <%  var i=0;for( i=0; i<arr.length; i++){ %>
   <tr>
    <td>
     <span id="span1">
      <%= arr[i].name %>
     </span>
    </td>
    <td class="td-name">
     <span class="ellipsis td-name block"> <%= arr[i].level %></span>
    </td>
    <td class="center">
     <span>
      <button title="查看" id="edit" onclick="$.post('/searchsc',{
              'name':'<%= arr[i].name %>'},function(info) {
          if(info==1){
              location.href='showsc'
              }
         })"><img src="images/icon_edit.gif"/></button>
     </span>
    </td>
    <%}%>
    </tr>
   <tr>
    <td> 总人数：<span id="s"><%= arr.length %></span></td>
   </tr>
  </table>
  <script>
      var status=document.getElementById('s').innerHTML;
      if(status==0){
          alert('权限错误,无权查看');
          location.href="main.html"
      }
  </script>
 </div>
</body>
</html>